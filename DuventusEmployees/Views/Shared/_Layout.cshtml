<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Duventus</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-white">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" title="List View" class="links">
                <img alt="List View" src="@Url.Content("/Content/Images/Du-Ventus-Logo.png")" width="192">
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @style = "color:#C61A21; padding: 10px 20px; font-weight:500;", @class = "nav-link text-duv-primary" })</li>
                    <li>@Html.ActionLink("Empleados", "Index", "Employees", new { area = "" }, new { @style = "color:#C61A21; padding: 10px 20px; font-weight:500;", @class = "nav-link text-duv-primary" })</li>
                    <li>@Html.ActionLink("Nominas", "Index", "Payrolls", new { area = "" }, new { @style = "color:#C61A21; padding: 10px 20px; font-weight:500;", @class = "nav-link text-duv-primary" })</li>

                    <li>@Html.ActionLink("Swagger", "Index", "Swagger", new { area = "" }, new { @style = "color:#C61A21; padding: 10px 20px; font-weight:500;", @class = "nav-link text-duv-primary" })</li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Duventus Examen</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
